    <% 
        @docs.each do |doc|
    %>
<div class="container">
<div class="card mb-5 text-center">

    <div class="card-title">
        <h3><i><%= doc.title %></i> </h3>
    </div>

    <div class="card-body">
        <%= 
    truncate(doc.content, length: 40)
    %>
    </div>

    <div class="time d-flex justify-content-start">
        <p> Created: <%= time_ago_in_words(doc.created_at) %> </p>
    </div>
    
    <div class="card-footer">
     <button class="btn btn-primary">
        <%=
            link_to "View Document", doc, class: "btn btn-primary"
        %>
     </button>   
    </div>

</div>
</div>
    <% end %>
