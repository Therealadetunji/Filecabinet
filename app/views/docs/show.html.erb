<div class="content text-center pt-2">
<h1 class="pb-4">
    <%= @doc.title %>
</h1>

<div class="vr pb-2"></div>

<p>
    <%= @doc.content %>
</p>

<div class="d-flex gap-3 justify-content-center">
<button class="btn btn-primary">
<%= link_to 'All Documents', docs_path, class: "text-light", style: "text-decoration: none;" %>
</button>

<button class="btn btn-primary">
<%= link_to 'Edit Document', edit_doc_path(@doc), class: "text-light", style: "text-decoration: none;" %>
</button>

<%= button_to 'Delete Document', doc_path(@doc), method: :delete, class: "btn btn-primary" %>

</div>

</div>
